<Window x:Class="FitnessRoom.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessRoom"
        mc:Ignorable="d"
        Title="Окно Авторизации" Height="490" Width="400">
    <Grid Background="#808080">
        <StackPanel Margin="80,45,80,45" Background="#DCDCDC">
            <TextBlock Text="Авторизация" FontSize="25" HorizontalAlignment="Center"/>
            <TextBlock Text="Логин" Margin="40,80,0,0" FontSize="14"/>
            <TextBox x:Name="login" Width="160"/>
            <TextBlock Text="Пароль" Width="160" Margin="0,10,0,0" />
            <PasswordBox x:Name="pass" Width="160"/>
            <Button x:Name="EnterBt" Content="Войти" Width="103" Margin="0,20,0,0" Click="EnterBt_Click"/>
        </StackPanel>
    </Grid>
</Window>
