<Window x:Class="FitnessRoom.Views.AparatusWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FitnessRoom.Views"
        mc:Ignorable="d"
        Title="Окно тренажеров" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Список тренажеров" FontSize="18" Background="#808080" Margin="0,0,0,385"/>
        <DataGrid Margin="0,25,175,0" x:Name="dataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Path= nameApparatus}"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Path= description}"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Margin="625,0,0,0">
            <TextBlock Text="Введите название тренажера" Margin="0 80 0 0" Width="155"/>
            <TextBox Margin="0 5 0 5" x:Name="surnameTxt"/>
            <Button Content="Найти" x:Name="SearchBt" Width="115" Click="SearchBt_Click"/>
            <Button x:Name="Back" Content="Назад" Margin="0 230 0 0" Width="100" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
